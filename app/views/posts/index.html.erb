<div class="container">
  <div id="posts" class="row">

    <% @posts.each do |post| %>        
      <%= link_to (post) do %>
      <div class="item medium-2 columns">
        <div class="th img-responsive">
          <a href="#" data-reveal-id="myModal"><%= image_tag post.picture.url %></a>

          <div class="hover-description">
              <h5><%= link_to "show", post_path(post)%></h5>
              <!-- <h5><%= post.description %></h5> -->
              <h5><%= link_to 'Destroy', post_path(post),
            :confirm => 'Are you sure?', :method => :delete %></h5> 
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
      
  </div>
</div>

   



<div id="myModal" class="reveal-modal" data-reveal>
  <h2>Awesome. I have it.</h2>
  <p class="lead">Your couch.  It is mine.</p>
  <p>I'm a cool paragraph that lives inside of an even cooler modal. Wins!</p>
  <a class="close-reveal-modal">&#215;</a>
</div>

    
