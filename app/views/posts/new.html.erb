

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
    <%= form_for(@post, html: { multipart: true, class: "dropzone"}) do |f|  %>
      <div class="fallback">

       
        <%= f.file_field :picture %><br>
        <%= f.submit "Upload" %>
      </div>
    <% end %>
    <br>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Drag & Drop</h3>
        </div>
        
        <div class="panel-body">
          <li>Up to 5mb per photo can be uploaded</li>
          <li>Maximum of 50 photos per load</li>
          <li>Accepts jpeg & png</li>
        </div>
      </div>
    </div>
  </div>
</div>


<%= link_to 'Back', posts_path %>


<br>

<%= link_to 'New Post', new_post_path %>
